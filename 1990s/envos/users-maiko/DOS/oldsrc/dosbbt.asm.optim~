.386.MODEL hugeNAME dosbbt	DATA SEGMENT	PUBLIC	EXTRN DisplayHeight: NEAR	EXTRN DisplayWidth: NEAR	ORG 00H	PUBLIC tmpbuffer	tmpbuffer               DB 4 DUP(00H)	DATA ENDS	CODE SEGMENT	PUBLIC       EXTRN _setvideomode: NEAR       EXTRN _putimage_w: NEAR       EXTRN _imagesize_w: NEAR       EXTRN _getvideoconfig: NEAR       EXTRN exit: NEAR       EXTRN free: NEAR       EXTRN calloc: NEAR                        PUBLIC DOSbitbliORG 00HBIT_SRC		EQU	000000014hSRC_LEFT	EQU	000000018hSRC_TOP		EQU	00000001chSRC_WIDTH	EQU	000000020hSRC_HEIGHT	EQU	000000024hSRC_BOTTOM	EQU	0fffffffchSRC_RIGHT	EQU	0fffffff4h	; DEST_ROW	EQU	; SRC_ROW		EQU	; DEST_COL	EQU	; SRC_COL		EQUSRCWIDTH32_3	EQU	0ffffffe8hSRCWIDTH32	EQU	0ffffffe4hDSPWIDTH32	EQU	0ffffffe0h                                                   ; Statement # 1081ASSUME DS:DATAASSUME CS:CODE DOSbitbli      proc near      ;; *****************************      ;; Save the volatile environment      ;; *****************************        push    ebx        push    esi        push    edi        push    ebp        mov     ebp,esp        sub     esp,1ch        ;;   SRC_RIGHT = (SRC_LEFT + source_width + 31)/32        mov     eax,DWORD PTR [ebp]+SRC_WIDTH        add     eax,DWORD PTR [ebp]+SRC_LEFT        add     eax,1fh        sar     eax,5        mov     DWORD PTR [ebp]+SRC_RIGHT,eax        ;; SRC_LEFT /= 32        mov     eax,DWORD PTR [ebp]+SRC_LEFT        sar     eax,5        mov     DWORD PTR [ebp]+SRC_LEFT,eax                ;; SRCWIDTH32 = SRC_RIGHT - SRC_LEFT        mov     eax,DWORD PTR [ebp]+SRC_RIGHT        sub     eax,DWORD PTR [ebp]+SRC_LEFT        mov     DWORD PTR [ebp]+SRCWIDTH32,eax	;; SRCWIDTH32_3 = SRCWIDTH32 * 3	mov     ebx,3        imul    ebx        mov     DWORD PTR [ebp]+SRCWIDTH32_3,eax	;; DSPWIDTH32 = DisplayWidth        mov     eax,DWORD PTR DisplayWidth        sar     eax,5        mov     DWORD PTR [ebp]+DSPWIDTH32,eax        ;; source_bottom = source_top + source_height        mov     eax,DWORD PTR [ebp]+SRC_TOP        add     eax,DWORD PTR [ebp]+SRC_HEIGHT        mov     DWORD PTR [ebp]+SRC_BOTTOM,eax        ;; tmpbuffer[1w] = source_height; tmpbuffer[2w] = source_width	;; After this poin edi is only updated indirect.        lea     edi,DWORD PTR   tmpbuffer        mov     eax,DWORD PTR [ebp]+SRC_HEIGHT	stosw        mov     eax,DWORD PTR [ebp]+SRC_WIDTH	stosw	;; End of the initialization. Start the loops.        ;; START outer loop        ;; Preamble of the outer loop        mov     ecx,DWORD PTR [ebp]+SRC_HEIGHT        push    ecx     ; For use later in the loop        ;; START of the outer loop        ;; START innermost loop        ;; Preamble to the innermost loop        ;; load the number of times this has to be done into ecx (ie. SRCWIDTH32)   @40: push    edi     ; Save edi for later blockmove	;; The source pointer turns out to be	;; (SRC_BOTTOM - SRC_HEIGHT)*DSPWIDTH32 + SRC_LEFT	;; where SRC_HEIGHT is stored in ecx        mov     eax,DWORD PTR [ebp]+SRC_BOTTOM	sub     eax,ecx        mov     ebx,DWORD PTR [ebp]+DSPWIDTH32	imul    ebx        add     eax,DWORD PTR [ebp]+SRC_LEFT	mov     esi,eax   @50: ;; The actual byte swapping	lodsd           ; Load eax and increment esi        xchg    ah,al   ; Swap low byte        rol     eax,10h ; Get the high byte into position        xchg    ah,al   ; Swap again        not     eax     ; In medley 1=black 0=white, Hence invert.	stosd           ; Store eax and increment edi        loop    @50        ;; Postamble to the inner loop        ;; do a block move of memory        pop     esi     ; Retrieve the old edi start of memoryblock                        ; edi is already pointing where we want it.        mov     ecx,DWORD PTR [ebp]+SRCWIDTH32_3        rep movsd      ; Go do it all        ;; END innermost loop        ;; Resume outer loop        pop     ecx     ; Restore the outer counter        loop    @40        ;; END outer loop        ;; ***********        ;; PUTIMAGE_W        ;; ***********        push    3h        push    DWORD PTR tmpbuffer; 2        fild    DWORD PTR [ebp]+SRC_TOP        sub     esp,8h        fstp    QWORD PTR [ebp-2ch]        mov     eax,DWORD PTR [ebp]+SRC_LEFT        sal     eax,5h        push    eax     ; 5        fild    DWORD PTR [ebp-30h]        pop     eax     ; 5        sub     esp,8h        fstp    QWORD PTR [ebp-34h]        call    _putimage_w        add     esp,18h        ;; Restore volitile environment.        leave        pop     edi        pop     esi        pop     ebx        ret                           DOSbitbli      endp	CODE ENDS.STACK 88END