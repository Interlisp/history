#! /bin/sh TRICKLEDIR=/python/medley-tricklesCOMPDIRS="lispcore emulator notecards"RMFILES=""cd $TRICKLEDIRfor directory in $COMPDIRSdo	RMFILE=`egrep -l -v '(failed|copy)' $directory/* 2> /dev/null` 	if test -n "$RMFILE"	then 		RMFILES="$RMFILE $RMFILES"	fi	for file in `\ls $directory`	do		if test ! -s $directory/$file		then			RMFILES="$directory/$file $RMFILES"		fi	donedoneif test -z "$RMFILES"then	echo "cleanup: No trickle files to remove ! "	exitfiQUESTION="Do you wish to delete these files ? "echo "Trickle directory: $TRICKLEDIR"echo "Files reflecting no change or of zero length:"echo "--------------------------------------------------"for file in $RMFILESdo	echo "	$file"doneecho "--------------------------------------------------"ANSWER=nowhile test "$ANSWER" -eq "no"do	echo -n "$QUESTION"	ANSWER=`line`	case "$ANSWER" in	[yY] | [yY][eE][sS])		echo "Removing files ..."		/bin/rm -f $RMFILES		echo "Done ..."		exit		;;	[nN] | [nN][oO] )		echo "Aborted ..."		exit		;;	*)		echo 'Please answer "[y]es" or "[n]o"'		;;	esacdone