INSTALLDIR = /tmp/usr/local/ldeTARDEV = /dev/rst0TARFLAGS = xvfTAR = tarEMULATORNAME = REPLACE-ME#OPTIONS = REPLACE-ME-TOOOPTIONS = medley rooms loops lispusers lisplibrary notecardsLDEERROR = "ERROR: I refuse to write over your old $(INSTALLDIR)"INSTERR = "ERROR: Can't install "CHKERR = "ERROR: Checksum error"all: $(OPTIONS)rooms: medley	cd $(INSTALLDIR);$(TAR) $(TARFLAGS) $(TARDEV) $@	@cd $(INSTALLDIR);if (test ! -f $@);then echo;echo -n $(INSTERR);echo $@;exit 1;filoops: medley	cd $(INSTALLDIR);$(TAR) $(TARFLAGS) $(TARDEV) $@	@cd $(INSTALLDIR);if (test ! -f $@);then echo;echo -n $(INSTERR);echo $@;exit 1;filispusers: medley	cd $(INSTALLDIR);$(TAR) $(TARFLAGS) $(TARDEV) $@	@cd $(INSTALLDIR);if (test ! -f $@);then echo;echo -n $(INSTERR);echo $@;exit 1;filisplibrary: medley	cd $(INSTALLDIR);$(TAR) $(TARFLAGS) $(TARDEV) $@	@cd $(INSTALLDIR);if (test ! -f $@);then echo;echo -n $(INSTERR);echo $@;exit 1;fifonts: medley	cd $(INSTALLDIR);$(TAR) $(TARFLAGS) $(TARDEV) $@	@cd $(INSTALLDIR);if (test ! -f $@);then echo;echo -n $(INSTERR);echo $@;exit 1;finotecards: emulators	cd $(INSTALLDIR);$(TAR) $(TARFLAGS) $(TARDEV) $@	@cd $(INSTALLDIR);if (test ! -f $@);then echo;echo -n $(INSTERR);echo $@;exit 1;fimedley: emulators	cd $(INSTALLDIR);$(TAR) $(TARFLAGS) $(TARDEV) $@	@cd $(INSTALLDIR);if (test ! -f $@);then echo;echo -n $(INSTERR);echo $@;exit 1;fiemulators: lde	cd $(INSTALLDIR);$(TAR) $(TARFLAGS) $(TARDEV) install.$(EMULATORNAME)	@cd $(INSTALLDIR);if (test ! -f install.$(EMULATORNAME))\		then echo;echo -n $(INSTERR);echo $@;exit 1;fi	lde:	@if (test -d $(INSTALLDIR));then echo;echo $(LDEERROR);exit 1;fi	mkdir -p $(INSTALLDIR)