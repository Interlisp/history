# ------- first comment line invokes c shell## Script assumes that it knows the directory structure!## Script will create xxxx/fonts, and all subdirectories.  Symbolic directory# links are *not* used, because are more prone to error:# e.g.	cd foo/bar/baz (bar is symbolic link)#	ls -Flat somefile (user observes only one file reference, no links)#	rm       somefile (so user thinks he can delete it!)## Documentation exists on {Pogo:}<DsunLisp>documents> on use of this# utility.  Thus if you change this, update the doc!## In script below, handle publishing directory special (because#	there are too many files, will overflow argument buffer)## Assumes srce, dest directories given on command line ($1, $2).#if ($#argv < 2) then    echo ""    echo "usage: linkfonts srcedir destdir"    echo "       dirs must be full root dirs, e.g.:  /python/maiko4-1.1.beta"    echo "       dest subdirs will be created automatically."    echo ""    exitendifsetenv FONTSRCEDIR $1/fontssetenv FONTDESTDIR $2/fontssetenv pub publishingalias chown /etc/chownmkdir     $FONTDESTDIRchown bin $FONTDESTDIRecho      $FONTDESTDIRforeach device (display interpress)	mkdir     $FONTDESTDIR/$device	chown bin $FONTDESTDIR/$device	echo      $FONTDESTDIR/$device	foreach dir ( JIS1 JIS2 chinese \			miscellaneous presentation printwheel )		mkdir       $FONTDESTDIR/$device/$dir		chown bin   $FONTDESTDIR/$device/$dir		echo "    " $FONTDESTDIR/$device/$dir		cd          $FONTSRCEDIR/$device/$dir		foreach file (*)			ln $file        $FONTDESTDIR/$device/$dir/$file			chown bin       $FONTDESTDIR/$device/$dir/$file			echo "        " $FONTDESTDIR/$device/$dir/$file			end		end	mkdir       $FONTDESTDIR/$device/$pub	chown bin   $FONTDESTDIR/$device/$pub	echo "    " $FONTDESTDIR/$device/$pub	cd          $FONTSRCEDIR/$device/$pub	foreach face (CLASSIC MODERN TERMINAL)		foreach file ($face*)			ln $file        $FONTDESTDIR/$device/$pub/$file			chown bin       $FONTDESTDIR/$device/$pub/$file			echo "        " $FONTDESTDIR/$device/$pub/$file			end		end	end# do press file(s)mkdir       $FONTDESTDIR/presschown bin   $FONTDESTDIR/pressecho "    " $FONTDESTDIR/presscd          $FONTSRCEDIR/pressforeach file (*)	ln $file        $FONTDESTDIR/press/$file	chown bin       $FONTDESTDIR/press/$file	echo "        " $FONTDESTDIR/press/$file	end# one time hack to handle /python/maiko.release FONTS.WIDTHS mistake## what to do with FONTS.WIDTHS? (only for press) # mkdir     $FONTDESTDIR/press/# chown bin $FONTDESTDIR/press# echo      $FONTDESTDIR/press# # mv    $FONTDESTDIR/interpress/chinese/FONTS.WIDTHS $FONTDESTDIR/press/