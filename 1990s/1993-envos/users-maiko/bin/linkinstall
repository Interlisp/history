# ------- first comment line invokes c shell## assume shell variables INSDEST and INSSRCE are set (to xxxx).# (script will create xxxx/install.sunosx)##	in script below, copy only one install directory#	note script is somewhat misnamed (it copies, not links, directories)## Assumes srce, dest directories given on command line ($1, $2).#if ($#argv < 3) then	echo ""	echo "usage: linkinstall srcedir destdir SunType(3or4)"	echo "       dirs should be root dirs, e.g.: /users/maiko/1.1beta2"	echo "                                 e.g.: /python/maiko3-1.1.beta"	echo "       dest subdirs will be created automatically."	echo ""	exitendifsetenv INSSRCEDIR $1setenv INSDESTDIR $2if (($3 != 3) && ($3 != 4)) then	echo ""	echo "3rd argument must be 3 or 4".	exitendifif ($3 == 3) then	setenv ldearch mc68020else	setenv ldearch sparcendifalias chown /etc/chownforeach os (sunos3 sunos4)	mkdir     $INSDESTDIR/install.$os	chown bin $INSDESTDIR/install.$os	echo      $INSDESTDIR/install.$os	cd        $INSSRCEDIR/RELEASE/install.$os.$ldearch	foreach file (*)		cp $file    $INSDESTDIR/install.$os/$file		chown bin   $INSDESTDIR/install.$os/$file		echo "    " $INSDESTDIR/install.$os/$file		end	chmod 755 $INSDESTDIR/install.$os/ldeether	end