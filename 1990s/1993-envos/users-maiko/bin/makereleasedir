## Assumes srce, dest directories given on command line ($1, $2).#if ($#argv < 4) then    echo ""    echo "usage: makereleasedir lispsrcedir miscsrcedir destdir Suntype(3or4)"    echo "       dirs should be root dirs, e.g.:  /python/maiko4-1.1.beta"    echo "       dest subdirs will be created automatically."    echo ""    exitendiflinkfonts    $1 $3linklispdirs $1 $3linkinstall  $2 $3 $4