# ------- first comment line invokes c shell## assume shell variables INSDEST and INSSRCE are set (to xxxx).# (script will create xxxx/install.sunosx)##	in script below, copy only one install directory#	note script is somewhat misnamed (it copies, not links, directories)## Assumes srce, dest directories given on command line ($1, $2).#if ($#argv < 2) then	echo ""	echo "usage: linkinstall srcedir destdir"	echo "       dirs should be root dirs, e.g.:  /python/maiko4-1.1.beta"	echo "       dest subdirs will be created automatically."	echo ""	exitendifsetenv INSSRCEDIR $1setenv INSDESTDIR $2alias chown /etc/chown# foreach dir (maiko4-1.1.beta maiko3-1.1.beta)foreach os (sunos3 sunos4)	mkdir     $INSDESTDIR/install.$os	chown bin $INSDESTDIR/install.$os	echo      $INSDESTDIR/install.$os	cd        $INSSRCEDIR/RELEASE/install.$os	foreach file (*)		cp $file    $INSDESTDIR/install.$os/$file		chown bin   $INSDESTDIR/install.$os/$file		echo "    " $INSDESTDIR/install.$os/$file		end	end# 	end